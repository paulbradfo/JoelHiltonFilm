@{
    ViewData["Title"] = "Add a Film";
}

@model JoelHiltonFilm.Models.FormResponse

<h1>Add a Film</h1>
<h3>to the Collection</h3>
<br />

<form method="post">
    <label asp-for="CategoryID">Category:</label>
    <select asp-for="CategoryID">
        <option value="">Select a Category</option>
        @foreach (Category c in ViewBag.Categories)
        {
            <option value="@c.CategoryID">@c.CatName</option>
        }
    </select><br /><br />

    <label asp-for="Title">Title:</label>
    <input asp-for="Title" /><br /><br />

    <label asp-for="Year">Year:</label>
    <input asp-for="Year" /><br /><br />

    <label asp-for="Director">Director:</label>
    <input asp-for="Director" /><br /><br />

    <label asp-for="Rating">Movie Rating:</label>
    <select asp-for="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
        <option value="UR">UR</option>
    </select><br /><br />

    <div asp-validation-summary="All"></div>

    <button class="btn btn-outline-dark mr-3" type="submit">Add</button>

</form>